{"ast":null,"code":"import { getAuth } from \"../../services/auth.service\";\nimport { emailValidation, isRequired } from \"../../utils/validationRules.js\";\nexport default {\n  data() {\n    return {\n      id: \"\",\n      isValid: true,\n      error: \"\",\n      errorMessage: 'error'\n    };\n  },\n\n  methods: {\n    async handleSubmit() {\n      const {\n        hasPassed,\n        message\n      } = this.rules.isRequired(this.id);\n\n      if (!hasPassed) {\n        this.error = message || this.errorMessage;\n        this.isValid = hasPassed;\n        return;\n      }\n\n      this.$emit(\"submit\", {\n        id: this.id\n      });\n\n      try {\n        const {\n          data\n        } = await getAuth(this.id);\n        this.$router.push({\n          name: \"analytics\"\n        });\n\n        if (data?.message) {\n          localStorage.setItem('leadhit-site-id', this.id);\n        }\n      } catch (error) {\n        console.log(error);\n      }\n    },\n\n    validete(value) {\n      const {\n        hasPassed,\n        message\n      } = this.rules.emailValidation(value);\n\n      if (value && !hasPassed) {\n        this.error = message || this.errorMessage;\n        this.isValid = hasPassed;\n        return;\n      }\n\n      this.error = '';\n      this.isValid = hasPassed;\n    }\n\n  },\n  computed: {\n    rules() {\n      return {\n        emailValidation,\n        isRequired\n      };\n    }\n\n  },\n  watch: {\n    id(v) {\n      this.validete(v);\n    }\n\n  }\n};","map":{"version":3,"mappings":"AASA,SAASA,OAAT,QAAwB,6BAAxB;AACA,SACIC,eADJ,EAEIC,UAFJ,QAGO,gCAHP;AAIA,eAAe;EAEXC,IAAI,GAAG;IACH,OAAO;MACHC,EAAE,EAAE,EADD;MAEHC,OAAO,EAAE,IAFN;MAGHC,KAAK,EAAE,EAHJ;MAIHC,YAAY,EAAC;IAJV,CAAP;EAMH,CATU;;EAWXC,OAAO,EAAE;IACL,MAAMC,YAAN,GAAqB;MACjB,MAAM;QAAEC,SAAF;QAAaC;MAAb,IAAyB,KAAKC,KAAL,CAAWV,UAAX,CAAsB,KAAKE,EAA3B,CAA/B;;MAEA,IAAI,CAACM,SAAL,EAAgB;QACZ,KAAKJ,KAAL,GAAaK,OAAM,IAAK,KAAKJ,YAA7B;QACA,KAAKF,OAAL,GAAeK,SAAf;QACA;MACJ;;MAEA,KAAKG,KAAL,CAA